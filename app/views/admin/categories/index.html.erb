<div class="container">
    <div class="category-title">
        <h1>餐廳分類總表</h1>
        <%= link_to '餐廳總覽', admin_restaurants_path %> |
        <%= link_to '餐廳分類', admin_categories_path %> 
    </div>
    <div class="form-inline">
        <%= form_for [:admin,@category] do |f| %>
        <div class="form-group">
            <%= f.text_field :name, placeholder: "Category Name", class: "form-control" %>
        </div>
        <%= f.submit class: "btn btn-primary" %>
        <% end %>
        <% if @category.errors.any? %>
            <%= @category.errors.full_messages.to_sentence %>
        <% end %>
        
    </div>
    <div class="row">
        
        <div class="col-md-12">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Category Name</th>
                        <th>Control</th>
                    </tr>
                </thead>
                <tbody>
                <% @categories.each do |category| %>
                    <tr>
                        <th scope="row"><%= category.id %></th>
                        <td><%= category.name %></td>
                        <td><%= link_to '編輯', admin_categories_path(id: category.id) %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>