
<div class="container">
  <h1>餐廳後台</h1>
  <div class="row">
    <div class="col-md-12">
      <div><%= link_to "新增新的餐廳", new_admin_restaurant_path %></div>

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <td>#</td>
            <td>Category</td>
            <td>Name</td>
            <td>#</td>
          </tr>
        </thead>
        <tbody>
          <% @restaurants.each do |restaurant| %>
            <tr>
              <th scope="row"><%= restaurant.id %></th>
              <td><%= [restaurant.category.name] %></td>
              <td><%= restaurant.name %></td>
              <td>
                  <%= image_tag restaurant.image, width: "200px" %>
                  <%= link_to '瀏覽', admin_restaurant_path(restaurant) %>
                  <%= link_to '編輯', edit_admin_restaurant_path(restaurant) %>
                  <%= link_to '刪除', admin_restaurant_path(restaurant), method: :delete, data: {confirm: "你確定要刪除嗎？"} %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center">
        <%= paginate @restaurants, outer_window: 3 %>
      </div>
    </div>
  </div>

</div>



