<div class="container">
<div class="row">
    <div class="categories">
            <ul class="nav nav-pills">
                <li class="nav-item"><%= link_to "全部餐廳", root_path, class: 'nav-link active' %></li>
                <% @categories.each do |category| %>
                    <li class="nav-item"><%= link_to category.name, category_path(category), class: 'nav-link' %></li>
                <% end %>
            </ul>
    </div>
    <% @restaurants.each do |restaurant| %>
    <div class="col-sm-6 col-md-4">
        
        <div class="restaurant-item">
            <%= link_to restaurant_path(restaurant) do %>
                <%= image_tag restaurant.image, class: "img-fluid center-block" %>
            <% end %>
            <div class="restaurant-caption">
                <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
                <p class="label label-default"><%= restaurant.category.name %></p>
                <p><%= truncate(restaurant.description, length: 80) %></p>
            </div>
        </div>
    </div>
    <% end %>

    <div class="text-center">
        <%= paginate @restaurants %>
    </div>
</div>
</div>




