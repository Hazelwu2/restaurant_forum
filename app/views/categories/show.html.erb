<div class="container">
  <div class="row">

    <ul class="nav nav-pills justify-content-center categories">
      <li role="presentation" class="nav-item">
        <%= link_to "全部餐廳", root_path, class: "nav-link" %>
      </li>
      <!-- 這邊判斷category==@category的時候要加 li.active -->
      <% @categories.each do |category| %>
        <li role="presentation" class="nav-item">
          <%= link_to category.name, category_path(category), class: "nav-link #{'active' if category == @category}" %>
        </li>
      <% end %>
    </ul>

    <br>

    <%= render partial: "shared/restaurant_list" %>

  </div>
</div>
